    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    rv:rv_color="@color/title_color">

    <TextView
        android:id="@+id/bus_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
