<?xml version="1.0" encoding="utf-8"?><!--com.handmark.pulltorefresh.library.PullToRefresh-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.ydh.gva.autoview.MyAutoView
            android:id="@+id/homePage_autoView"
            android:layout_width="fill_parent"
            android:layout_height="147.3dip"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="20.5dp"
            android:layout_marginBottom="5dp">

            <GridView
                android:id="@+id/grid_category"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.7dp"
                android:layout_marginRight="6.7dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center"
                android:horizontalSpacing="0dip"
                android:listSelector="@null"
                android:numColumns="4"
                android:smoothScrollbar="true"
                android:soundEffectsEnabled="true"
                android:stretchMode="columnWidth"
                android:verticalSpacing="0dip" />
        </RelativeLayout>

        <include layout="@layout/activity_home_page_activity" />

        <com.ydh.gva.base.widget.MyListView
            android:id="@+id/list_fixation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:cacheColorHint="#00000000"
            android:divider="#D9D9D9"
            android:dividerHeight="0.5dip"
            android:focusable="false" />


        <com.ydh.gva.base.widget.MyListView
            android:id="@+id/list_news"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:cacheColorHint="#00000000"
            android:divider="#D9D9D9"
            android:dividerHeight="0.5dip"
            android:focusable="false"
            android:layout_marginBottom="15dp"/>


    </LinearLayout>


</RelativeLayout>