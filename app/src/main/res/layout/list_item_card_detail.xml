<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    xmlns:tools="http://schemas.android.com/tools">

    <gva.ydh.com.rippleviewlibrary.RippleView xmlns:rv="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        rv:rv_zoomDuration="50"
        rv:rv_color="@color/title_color">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="14dp">

            <TextView
                android:id="@+id/row_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:singleLine="true"
                tools:text="五分钟学会英语语调" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/pic_rl"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <!-- my_class_image_width -->

                    <com.ydh.gva.base.widget.WLImageView
                        xmlns:fresco="http://schemas.android.com/apk/res-outo"
                        android:id="@+id/row_iv"
                        android:layout_width="140dp"
                        android:layout_height="94dp"
                        fresco:placeholderImage="@mipmap/pic_default_home_ad"
                        fresco:placeholderImageScaleType="fitCenter" />

                    <ImageView
                        android:id="@+id/row_red_dot_is_had_opened"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="1dp"
                        android:src="@mipmap/ic_class" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|center"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="12dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/myclass_classmateprogress_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:maxLines="2"
                            android:ellipsize="end"
                            tools:text="我的进度" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/myclass_myprogress"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/myclass_myprogress_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:maxLines="2"
                            android:ellipsize="end"
                            tools:text="大家的进度" />


                    </RelativeLayout>

                    <TextView
                        android:id="@+id/credit"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:paddingBottom="8dp"
                        android:includeFontPadding="false"
                        tools:text="385学分/距毕业36天 " />

                    <LinearLayout
                        android:id="@+id/myclass_contunue_study"
                        android:layout_width="124dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/ic_dashboard"
                        android:clickable="true"
                        android:gravity="center"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/tx_start"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="5dp"
                            android:drawableRight="@mipmap/ic_dashboard"
                            android:singleLine="true"
                            android:text="dad" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </gva.ydh.com.rippleviewlibrary.RippleView>

</android.support.v7.widget.CardView>