<resources>



    <style name="city_label">
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@drawable/black_white_text_color_selector</item>
    </style>

    <style name="dividedListStyle" parent="@android:style/Widget.ListView">
        <item name="android:divider">#ffe9e9e9</item>
        <item name="android:dividerHeight">1.0px</item>
    </style>

    <style name="title_text">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="special_line_Style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.1dp</item>
        <item name="android:background">@color/special_line_color</item>
    </style>
</resources>
